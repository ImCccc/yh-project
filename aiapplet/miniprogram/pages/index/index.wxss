.scroll {
  position: absolute;
  left: 0;
  top: 0;
  max-height: 100vh;
  box-sizing: border-box;
}

#list-child {
  height: 136rpx;
  margin-left: -50px;
}

.bottom {
  z-index: 2;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 136rpx;
  padding-bottom: 26rpx;
  padding-right: var(--base-margin);
  box-shadow: 0 -2px 4px 0 rgba(0, 0, 0, 0.05);
  background-color: #eff3f8;
}

.comp {
  flex-grow: 1;
}

.placeholder {
  width: var(--base-margin);
}

.iconfont {
  padding: 0 var(--base-margin);
  height: 100%;
  font-size: 50rpx;
  display: flex;
  align-items: center;
}

.speak-btn {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  height: 78rpx;
}

.round {
  border: 1px solid #000;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

.field {
  margin-right: calc(var(--base-margin) + 110rpx);
}

.textbutton {
  background: rgba(25, 137, 250);
  border-radius: 8rpx;
  font-size: var(--base-font-size);
  color: white;
  width: 110rpx;
  height: 66rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: calc(-110rpx - var(--base-margin));
  bottom: 6rpx;
}

.textinput {
  box-sizing: border-box;
  position: relative;
  overflow: inherit;
  background-color: #fff;
  border-radius: 8rpx;
  height: 78rpx;
  padding-left: 20rpx;
  font-size: var(--base-font-size);
}

.status-bar {
  z-index: 10;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  width: 100vw;
  box-sizing: border-box;
  font-size: 36rpx;
  font-weight: bold;
  background-color: #fff;
}

.status {
  display: flex;
  justify-content: center;
  align-items: center;
}