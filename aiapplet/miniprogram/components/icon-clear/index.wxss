.c-container {
  margin-bottom: 140rpx;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-box {
  width: 140rpx;
  height: 140rpx;
  background: #383838;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: width .3s, height .3s, background .3s;
}

.icon-box.cancelRecord {
  width: 100%;
  height: 100%;
  background: #fff;
}