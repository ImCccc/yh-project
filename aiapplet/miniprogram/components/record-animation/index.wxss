.spinner {
  --height: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 460rpx;
  height: 180rpx;
  border-radius: var(--base-margin);
  background-image: linear-gradient(90deg, #07aaff 0%, #0371fd 100%);
}
.triangle {
  width: 0rpx;
  height: 0rpx;
  border: 32rpx solid transparent;
  border-top-color: #348dff;
  position: absolute;
  bottom: -50rpx;
  left: 50%;
  transform: translateX(-50%);
}
.spinner.cancelRecord {
  background-image:linear-gradient(90deg, #a25a66 0%, #9e1733 100%);
}
.cancelRecord .triangle {
  border-top-color: #9a404f;
}
.spinner .bar {
  background: #fff;
  width: 6rpx;
  height: var(--height);
  border-radius: 4rpx;
  animation: grow .5s ease-in-out infinite;
  margin: 0 8rpx;
}
.spinner .bar:nth-child(2) {
  height: calc(var(--height) + 2rpx);
  animation: grow 1s ease-in-out 0.1s infinite;
}
.spinner .bar:nth-child(3) {
  height: calc(var(--height) + 4rpx);
  animation: grow 1s ease-in-out 0.2s infinite;
}
.spinner .bar:nth-child(4) {
  height: calc(var(--height) + 6rpx);
  animation: grow 1s ease-in-out 0.4s infinite;
}
.spinner .bar:nth-child(5) {
  height: calc(var(--height) + 8rpx);
  animation: grow 1s ease-in-out 0.2s infinite;
}
.spinner .bar:nth-child(5) {
  height: calc(var(--height) + 5rpx);
  animation: grow 1s ease-in-out 0.3s infinite;
}
.spinner .bar:nth-child(6) {
  height: calc(var(--height) + 4rpx);
  animation: grow 1s ease-in-out 1s infinite;
}
.spinner .bar:nth-child(7) {
  height: calc(var(--height) + 10rpx);
  animation: grow 1s ease-in-out 0.15s infinite;
}
.spinner .bar:nth-child(8) {
  height: calc(var(--height) + 8rpx);
  animation: grow 1s ease-in-out 0.6s infinite;
}
.spinner .bar:nth-child(9) {
  height: calc(var(--height) + 4rpx);
  animation: grow 1s ease-in-out 0.85s infinite;
}
.spinner .bar:nth-child(10) {
  height: calc(var(--height) + 6rpx);
  animation: grow 1s ease-in-out 1s infinite;
}
.spinner .bar:nth-child(11) {
  height: calc(var(--height) + 2rpx);
  animation: grow 1s ease-in-out 0.15s infinite;
}
.spinner .bar:nth-child(12) {
  animation: grow 1s ease-in-out 0.9s infinite;
}
@keyframes grow {
  0%, 100% { transform: scaleY(1); }
  50% { transform: scaleY(1.8); }
}