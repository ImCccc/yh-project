.wrap {
  position: relative;
  padding-top: 88rpx;
}

.img-wrap {
  position: absolute;
  left: 50%;
  top: 0;
  z-index: 1;
  transform: translate(-50%, 0%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 176rpx;
  height: 176rpx;
  background: #EFF3F8;
  border: 1px solid #FFFFFF;
  box-shadow: 0 4px 6px 0 #0000000d;
  border-radius: 50%;
  box-shadow: 0 4px 6px 0 rgba(0, 0, 0, 0.05);
}
.img {
  width: 128rpx;
}

.context {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  background: #EFF3F8;
  border-radius: 24rpx;
}

.btn {
  width: 72%;
  margin: 80rpx 0;
}

.title {
  padding: 0 36rpx;
  display: inline-block;
  font-size: 38rpx;
  border-bottom:  1px solid rgba(0, 0, 0, 0.05);
  padding-top: 152rpx;
  padding-bottom: 31rpx;
}

.checkbox-box {
  display: flex;
  justify-content: center;
  width: 90vw;
  font-size: 24rpx !important;
  margin-bottom: 80rpx;
}

